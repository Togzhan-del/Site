@{
    ViewData["Title"] = "Aurora";
}

<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: montserrat, sans-serif;
        }

        div.page-wrap{
            display:flex;
            min-height:100vh;

        }
        div.left-panel {
            flex: 1 1 66.666%;
            flex-direction: column;
            display: flex;
            justify-content: center;
            align-items: center;
        }



        div.left-panel h2 {
            color: #fff;
            font-size: 48px;
            font-weight: 400;
            text-align: center;
        }
            
        div.right-panel{
            flex: 1 1 33.333%;
            padding:25px;
        }
        div.right-panel h1{
            color:#CD5C5C;
            font-size:48px;
            font-weight:400;
            margin-bottom:50px;
        }
            div.right-panel h1 strong {
                color: #CD5C5C;
                font-weight: 900;
            }
            
        form.animated-form h3 {
            color: #666;
            font-size: 28px;
            font-weight: 500;
            margin-bottom: 45px;
        }
        form.animated-form.div.form-group {
            position: relative;
            display: flex;
            margin-bottom:45px;
        }

        form.animated-form.form-group label{
            position:absolute;
            top:50%;
            left:0px;
            transform:translateY(-50%);
            color:#fff;
            font-size: 20px;
        }
        form.animated-form.form-group input {
            display: block;
            width: 100%;
            padding: 10px 0px;
            border: none;
            outline: none;
            background: none;
            border-bottom: 3px solid #0094ff;
            color: #fff;
            font-size: 20px
            }

    </style>
</head>
<body background="https://www.tokkoro.com/picsup/1355998-aurora-borealis.jpg">
    <div class="page-wrap">
        <div class="left-panel">
            <p >
            <img src="https://www.clipartmax.com/png/full/232-2324116_vector-green-bird-logo-vector-graphics.png" width="600" height="400" />
             </p>
        <h2>Easy online shopping</h2>
        </div>
    
        <div class="right-panel">
            <h1>
                <strong>Welcome to my site</strong> to Aurora
            </h1>
            <form class="animated-form">
                <h3>Login to your account</h3>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" class="username"/>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="password"/>
                </div>
                <div class="form-group flex-end">
                     <input type="submit" value="LOGIN" class="button"/>

                </div>
                <div class="lost-password">
                    <a href="#" class="link">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>
</body>

